<% if flash[:new] %>
  <p class="successfully"><%= flash[:new] %></p>
<% end %>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      </tr>
  </thead>

  <tbody>
      <tr>
        <% @books.each do |book| %>
            <td class="title"><%= book.title %></td\>
            <td class="body"><%= book.body %></td>
            <td><%= link_to "Show", book_path(book) %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>
  
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <div class="error">errors prohibited this book from being saved:
    </div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div>Title</div>
  <%= f.text_field :title %>
<div>Body</div>
  <%= f.text_area :body %>

<div><%= f.submit 'Create Book' %></div>

<% end %>